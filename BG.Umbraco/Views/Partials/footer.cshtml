@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage
@{
    var siteSettings = ViewData["SiteSettings"] as Site;
}

<!-- Footer -->
<footer class="text-center">
    <div class="container">
        <div class="mb-3">
            <p class="mb-0">@siteSettings?.SiteName</p>
        </div>
        <small>@Html.Raw(siteSettings?.FooterContent)</small>
    </div>
</footer>